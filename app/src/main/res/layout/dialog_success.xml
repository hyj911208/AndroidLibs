<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kunpeng.common.view.widget.roundtextview.RoundRelativeLayout
        android:id="@+id/dialog"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="14dp"
        app:rv_backgroundColor="@color/white"
        app:rv_cornerRadius="15dp">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_50"
            android:src="@drawable/icon_sucess" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_10"
            android:text="修改成功"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_below="@id/title"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginTop="@dimen/space_40"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginBottom="@dimen/space_40"
            android:background="@drawable/login_text_submit"
            android:gravity="center"
            android:text="@string/login_immediately"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </com.kunpeng.common.view.widget.roundtextview.RoundRelativeLayout>

</RelativeLayout>
