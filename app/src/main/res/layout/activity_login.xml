<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.kunpeng.common.view.widget.PanningView
            android:id="@+id/panning_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_login_bg"
            app:panningDurationInMs="15000" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_welcome" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="美丽创造价值"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/login_once"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="142dp"
                android:background="@drawable/bg_item_login">

                <TextView
                    android:id="@+id/btn_quick_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/icon_once"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="一键登录"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_phone"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_item_login_phone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/icon_iphone"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="手机登录"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/login_wechat"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_item_login_phone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawableStart="@drawable/icon_weichat"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="微信登录"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</layout>
