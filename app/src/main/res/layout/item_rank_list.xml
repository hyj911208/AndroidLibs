<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_72"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_20" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="@dimen/space_20"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_20"
        android:gravity="center"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"
        tools:text="1" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_48"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_16"
        android:layout_toEndOf="@id/tv_number">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/end_head"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/bg_mine_card"
            app:border_color="#FF0084"
            app:border_width="1dp"
            app:inner_border_width="@dimen/space_1"
            app:is_circle="true" />

        <TextView
            android:id="@+id/tv_online"
            android:layout_width="@dimen/space_24"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_mine_text"
            android:gravity="center"
            android:text="@string/online"
            android:textColor="#ffeddcdc"
            android:textSize="@dimen/text_size_8" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_16"
        android:layout_toEndOf="@id/rl_head"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_size_15"
        tools:text="名字" />

    <TextView
        android:id="@+id/tv_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginEnd="@dimen/space_15"
        android:textColor="@color/color_EF1263"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        tools:text="1.5w钻石" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/space_15"
        android:layout_toEndOf="@id/rl_head"
        android:background="@color/color_EEEEEE" />

</RelativeLayout>
